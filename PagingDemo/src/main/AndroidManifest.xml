<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pagingdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- 为了方便,直接切换Activity -->
        <activity android:name=".pagingboundraycallback.BoundaryCallbackActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".itemkeyeddatasource.ItemKeyedActivity">

        </activity>
        <activity android:name=".pagekeyeddatasource.PageKeyedActivity"></activity>
        <activity android:name=".positionaldatasource.PositionalSourceActivity" />
    </application>

</manifest>